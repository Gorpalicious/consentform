{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('questions-1.title') }}</h1>

    <div>
        <p>
            {{ __('questions-1.intro') }}
        </p>


        <form method="post" class="form">

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <h2>{{ __('contactInfo.title') }}</h2>

            {{ textInput('researcher_name', 'form.researcher_name') }}
            {{ textInput('researcher_phone', 'form.researcher_phone') }}
            {{ textInput('researcher_email', 'form.researcher_email') }}


            <h2>{{ __('testInfo.title') }}</h2>

            <div class="toggle-area">
                {{ radioButtons('is_with_partner', { 'on':'Yes','off':'No'}, data.is_with_partner, 'form.is_with_partner', errors) }}
            </div>
            <div class="is_with_partner-toggled" style="display:none" >
                {{ textInput('partner_department_name_en', 'form.partner_department_name_en')  }}
                {{ textInput('partner_department_name_fr', 'form.partner_department_name_fr' ) }}
                {{ textInput('partner_department_acronym_en', 'form.partner_department_acronym_en') }}
                {{ textInput('partner_department_acronym_fr', 'form.partner_department_acronym_fr') }}
                {{ textInput('partner_department_authority_en', 'form.partner_department_authority_en', { hint: 'form.partner_department_authority.desc' }) }}
                {{ textInput('partner_department_authority_fr', 'form.partner_department_authority_fr') }}
            </div>

            {{ radioButtons('research_method', { '1':'Interview','2':'Usability testing'}, data.research_method, 'form.research_method', errors) }}

            {{ textArea('research_goal_en', 'form.research_goal_en', {hint: 'form.research_goal.desc'}) }}
            {{ textArea('research_goal_fr', 'form.research_goal_fr') }}
            {{ textArea('session_activity_en', 'form.session_activity_en', {hint: 'form.session_activity.desc'}) }}
            {{ textArea('session_activity_fr', 'form.session_activity_fr') }}

            {{ textInput('session_duration_en', 'form.session_duration_en', {hint: 'form.session_duration.desc'}) }}
            {{ textInput('session_duration_fr', 'form.session_duration_fr') }}

            {{ textArea('personal_information_collected_en', 'form.personal_information_collected_en', {hint: 'form.personal_information_collected.desc'}) }}
            {{ textArea('personal_information_collected_fr', 'form.personal_information_collected_fr') }}

            <div class="toggle-area">
                {{ radioButtons('compensation', { 'on':'Yes','off':'No'}, data.compensation, 'form.compensation', errors) }}
            </div>
            <div class="compensation-toggled" style="display:none" >
                {{ radioButtons('compensation_method', { '1':'Mastercard gift card','2':'VISA gift card'}, data.compensation_method, 'form.compensation_method', errors) }}
                {{ radioButtons('compensation_value', { '1':'$50 (For 1 hour of their time)','2':'$25 (For 1/2 hour of their time)','3':'$10 (For 8.5 min of their time (minimum))'}, data.compensation_value, 'form.compensation_value', errors) }}
            </div>

            <div class="toggle-area">
            {{ radioButtons('confidentiality', { 'off-1':'form.anonymized','off-2':'form.anonymous','off-3':'form.confidential','on-1':'form.not_confidential','on-2':'form.public'}, data.confidentiality, 'form.confidentiality', errors) }}
            </div>
            <div class="confidentiality-toggled" style="display:none" >
                {{ textArea('personal_information_disclosed_to_public_en', 'form.personal_information_disclosed_to_public_en') }}
                {{ textArea('personal_information_disclosed_to_public_fr', 'form.personal_information_disclosed_to_public_fr') }}
            </div>

            <div class="toggle-area">
                {{ radioButtons('administrative_decision', { 'on':'Yes','off':'No'}, data.administrative_decision, 'form.administrative_decision', errors) }}
            </div>
            <div class="administrative_decision-toggled" style="display:none" >
                {{ textArea('administrative_purpose_en', 'form.administrative_purpose_en', {hint: 'form.administrative_purpose.desc'}) }}
                {{ textArea('administrative_purpose_fr', 'form.administrative_purpose_fr') }}
            </div>

            {{ radioButtons('consent', { '1':'Verbally','2':'On paper','3':'action'}, data.consent, 'form.consent', errors) }}

            {{ radioButtons('is_business', { '1':'Yes','2':'No'}, data.is_business, 'form.is_business', errors) }}

            <div class="toggle-area">
                {{ radioButtons('recording_type', { 'on-1':'Video and audio','on-2':'Audio only','on-3':'Screen recording with audio','off-1':'Screen recording only','off-2':'No recording'}, data.recording_type, 'form.recording_type', errors) }}
            </div>
            <div class="recording_type-toggled" style="display:none" >
                {{ textArea('purposes_for_which_the_recording_may_be_disclosed_en', 'form.purposes_for_which_the_recording_may_be_disclosed_en') }}
                {{ textArea('purposes_for_which_the_recording_may_be_disclosed_fr', 'form.purposes_for_which_the_recording_may_be_disclosed_fr') }}
            </div>
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
